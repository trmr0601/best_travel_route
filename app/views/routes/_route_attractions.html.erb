<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attractions

    <a data-toggle="collapse" href="#route_attractions_new_form">
      Add attraction
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @route.attractions.each do |attraction| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to attraction, attraction %>

        <%= link_to attraction, method: :delete, data: { confirm: "Do you really want to delete this attraction" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="route_attractions_new_form">
        <%= render partial: "routes/route_attractions_new_form" %>
      </div>
    </div>

  </ul>
</div>
