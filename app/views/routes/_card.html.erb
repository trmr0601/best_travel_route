<div class="card mb-3">
  <h2 class="card-header h4">
    Route #<%= route.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Start point</dt>
      <dd><%= route.start_point %></dd>

      <dt>End point</dt>
      <dd><%= route.end_point %></dd>

      <dt>Distance</dt>
      <dd><%= route.distance %></dd>

      <dt>Transportations</dt>
      <dd>
        <% if @route.transportations.present? %>
          <%= link_to route.transportations, route.transportations %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back route, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_route_url(route), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to route, method: :delete, data: { confirm: "Do you really want to delete this route?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(route.updated_at) %> ago
  </div>
</div>
