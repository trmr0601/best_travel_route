<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Routes

    <a data-toggle="collapse" href="#transportation_routes_new_form">
      Add route
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @transportation.routes.each do |route| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to route, route %>

        <%= link_to route, method: :delete, data: { confirm: "Do you really want to delete this route" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="transportation_routes_new_form">
        <%= render partial: "transportations/transportation_routes_new_form" %>
      </div>
    </div>

  </ul>
</div>
