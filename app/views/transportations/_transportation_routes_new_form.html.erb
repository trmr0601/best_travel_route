<%= form_with(model: @route, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :start_point %>

    <%= f.text_field :start_point, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_point %>

    <%= f.text_field :end_point, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :distance %>

    <%= f.text_field :distance, class: "form-control" %>
  </div>

  <%= f.hidden_field :transportations_id, value: @transportation.id %>

  <%= f.submit "Create route", class: "btn btn-block btn-outline-secondary" %>
<% end %>
