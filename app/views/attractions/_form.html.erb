<% was_validated = attraction.errors.any? %>

<%= form_with(model: attraction, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% attraction_name_class = "form-control" %>
    <% attraction_name_was_invalid = attraction.errors.include?(:attraction_name) %>

    <% if was_validated %>
      <% if attraction_name_was_invalid %>
        <% attraction_name_class << " is-invalid" %>
      <% else %>
        <% attraction_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :attraction_name %>
    <%= f.text_field :attraction_name, class: attraction_name_class, placeholder: "Enter attraction name" %>
    <% if attraction_name_was_invalid %>
      <% attraction.errors.full_messages_for(:attraction_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% attraction_type_class = "form-control" %>
    <% attraction_type_was_invalid = attraction.errors.include?(:attraction_type) %>

    <% if was_validated %>
      <% if attraction_type_was_invalid %>
        <% attraction_type_class << " is-invalid" %>
      <% else %>
        <% attraction_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :attraction_type %>
    <%= f.text_field :attraction_type, class: attraction_type_class, placeholder: "Enter attraction type" %>
    <% if attraction_type_was_invalid %>
      <% attraction.errors.full_messages_for(:attraction_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% attraction_description_class = "form-control" %>
    <% attraction_description_was_invalid = attraction.errors.include?(:attraction_description) %>

    <% if was_validated %>
      <% if attraction_description_was_invalid %>
        <% attraction_description_class << " is-invalid" %>
      <% else %>
        <% attraction_description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :attraction_description %>
    <%= f.text_field :attraction_description, class: attraction_description_class, placeholder: "Enter attraction description" %>
    <% if attraction_description_was_invalid %>
      <% attraction.errors.full_messages_for(:attraction_description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% location_class = "form-control" %>
    <% location_was_invalid = attraction.errors.include?(:location) %>

    <% if was_validated %>
      <% if location_was_invalid %>
        <% location_class << " is-invalid" %>
      <% else %>
        <% location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location %>
    <%= f.text_field :location, class: location_class, placeholder: "Enter location" %>
    <% if location_was_invalid %>
      <% attraction.errors.full_messages_for(:location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% cost_class = "form-control" %>
    <% cost_was_invalid = attraction.errors.include?(:cost) %>

    <% if was_validated %>
      <% if cost_was_invalid %>
        <% cost_class << " is-invalid" %>
      <% else %>
        <% cost_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cost %>
    <%= f.text_field :cost, class: cost_class, placeholder: "Enter cost" %>
    <% if cost_was_invalid %>
      <% attraction.errors.full_messages_for(:cost).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% route_class = "form-control" %>
    <% route_was_invalid = attraction.errors.include?(:route) %>

    <% if was_validated %>
      <% if route_was_invalid %>
        <% route_class << " is-invalid" %>
      <% else %>
        <% route_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :routes_id %>
    <%= f.collection_select :routes_id, Route.all, :id, :to_s, {}, class: "form-control" %>
    <% if route_was_invalid %>
      <% attraction.errors.full_messages_for(:route).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
