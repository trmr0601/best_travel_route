<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Feedbacks

    <a data-toggle="collapse" href="#user_feedbacks_new_form">
      Add feedback
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.feedbacks.each do |feedback| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to feedback, feedback %>

        <%= link_to feedback, method: :delete, data: { confirm: "Do you really want to delete this feedback" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_feedbacks_new_form">
        <%= render partial: "users/user_feedbacks_new_form" %>
      </div>
    </div>

  </ul>
</div>
