<% was_validated = user.errors.any? %>

<%= form_with(model: user, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = user.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% user.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% age_class = "form-control" %>
    <% age_was_invalid = user.errors.include?(:age) %>

    <% if was_validated %>
      <% if age_was_invalid %>
        <% age_class << " is-invalid" %>
      <% else %>
        <% age_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :age %>
    <%= f.text_field :age, class: age_class, placeholder: "Enter age" %>
    <% if age_was_invalid %>
      <% user.errors.full_messages_for(:age).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% travel_preference_class = "form-control" %>
    <% travel_preference_was_invalid = user.errors.include?(:travel_preference) %>

    <% if was_validated %>
      <% if travel_preference_was_invalid %>
        <% travel_preference_class << " is-invalid" %>
      <% else %>
        <% travel_preference_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :travel_preference %>
    <%= f.text_field :travel_preference, class: travel_preference_class, placeholder: "Enter travel preference" %>
    <% if travel_preference_was_invalid %>
      <% user.errors.full_messages_for(:travel_preference).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
